---
import { Picture } from "astro:assets";
const { item, alt, className } = Astro.props;
---

<div class={`picture-container ${className}`}>
  {
    item ? (
      <Picture src={item} formats={["avif", "webp"]} alt={alt} />
    ) : (
      <p>no item</p>
    )
  }
</div>

<style>
  .picture-container {
    display: block;
    width: 100%;
    position: relative;
    picture {
      width: 100%;
      height: 100%;
      display: block;

      img {
        width: 100%;
        height: 100%;
        display: block;
      }
    }
  }
</style>
